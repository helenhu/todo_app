<% provide(:title, 'Home') %>

<% if logged_in? %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<section class="task_form">
				<%= render 'shared/task_form' %>
			</section>
			<h3>Todo</h3>
			<% if current_user.unchecked_tasks.any? %>
				<section class="todo_list">
					<%= render current_user.unchecked_tasks %>
				</section>
			<% end %>
			<h3>Completed</h3>
			<% if current_user.checked_tasks.any? %>
				<section class="todo_list">
					<%= render current_user.checked_tasks %>
				</section>
			<% end %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>
